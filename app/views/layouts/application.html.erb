<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "pickingspree" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "chirp" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <div id="wrap">
    <main role="main">
      <%= render 'layouts/messages' %>
      <%= yield %>
      <%= render 'layouts/footerad' %>
    </main>
    </div>
    <footer class="footer">
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>
