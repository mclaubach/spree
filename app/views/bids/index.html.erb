<p id="notice"><%= notice %></p>

<h1>Listing Bids</h1>
  <% @events.each do |event| %>
    <% if event.active == true %>
      <%= link_to event.id, event_path(event) %>
      <%= event.title %>
      <%= event.time %>
    <% else %>
      <%= puts "" %>
    <% end %>
  <% end %>

<p><%= "hi #{@events.count}" %></p>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.user_id %></td>
        <td><%= bid.event_id %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Bid', new_bid_path %>
