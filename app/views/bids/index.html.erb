<p id="notice"><%= notice %></p>

<h1>Listing Bids</h1>
  <% @events.each do |event| %>
    <% if event.active == true %>
      <%= link_to event.id, event_path(event) %>
      <%= event.title %>
      <%= event.time %>
      <%= event.bids.each do |bid| %>
        <%= bid.user_choice %>
        <% end %>
    <% else %>
      <%= puts "" %>
    <% end %>
  <% end %>

<p><%= "hi #{@events.count}" %></p>
