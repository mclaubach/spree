<%= simple_form_for(@bid) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_choice %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

  <% @events.each do |event| %>
    <% if event.active == true %>
      <%= link_to event.id, event_path(event) %>
      <%= event.title %>
      <%= event.time %>
    <% else %>
      <%= puts "" %>
    <% end %>
  <% end %>
