<%= simple_form_for [@event,@bid] do |f| %>

  <%= f.input :user_choice %>
  <%= error_span(@event[:user_choice]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                event_bids_path, :class => 'btn btn-default' %>
<% end %>